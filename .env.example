# X-Tracker Configuration
# Copy this file to .env and fill in your values

# X API Credentials (Required)
BEARER_TOKEN=your_bearer_token_here
API_KEY=your_api_key_here
API_KEY_SECRET=your_api_secret_here

# OAuth Tokens (Optional - for enhanced features)
ACCESS_TOKEN=your_access_token_here
ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Target User Configuration
TARGET_USER_ID=your_user_id_here
TARGET_USERNAME=your_username_here

# Database Configuration
DATABASE_PATH=data/x_tracker.db

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=15
RATE_LIMIT_WINDOW_MINUTES=15

# Cleaner Configuration
INACTIVE_THRESHOLD_DAYS=180
MAX_UNFOLLOWS_PER_RUN=50
MAX_UNFOLLOWS_PER_DAY=100
PROTECT_VERIFIED=true
PROTECT_HIGH_FOLLOWERS=true
MIN_FOLLOWER_THRESHOLD=10000

# UI Configuration
UI_HOST=127.0.0.1
UI_PORT=7860

# Paths
DATA_DIR=data
REPORTS_DIR=reports
LOGS_DIR=logs

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO